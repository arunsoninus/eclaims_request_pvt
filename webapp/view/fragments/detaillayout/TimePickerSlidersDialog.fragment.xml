<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog
		title="Select New Time">
		<TimePickerSliders
			id="TPS2"
			support2400="true"
			valueFormat="HH:mm"
			displayFormat="HH:mm"
			change="handleChange"
			height="400px"/>
		<buttons>
			<Button
				text="OK"
				press="handleOKPress2"
				type="Emphasized"/>
			<Button
				text="Cancel"
				press="handleCancelPress2"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>