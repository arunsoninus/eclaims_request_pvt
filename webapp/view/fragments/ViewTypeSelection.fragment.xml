<core:FragmentDefinition height="100%" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:l="sap.ui.layout">
	<VBox class="sapUiSmallMargin">
		<Label labelFor="periodLabel" text="Select View"/>
		<RadioButtonGroup id="periodLabel" columns="5" valueState="None" class="sapUiMediumMarginBottom">
			<RadioButton id="weekRB" text="Weekly" selected="{ClaimRequest>/weeklyView}"/>
			<RadioButton id="monthRB" text="Monthly" selected="{ClaimRequest>/monthlyView}"/>
			<RadioButton id="moduleRB" text="Module-Wise" selected="{ClaimRequest>/moduleView}"/>
		</RadioButtonGroup>
	</VBox>
</core:FragmentDefinition>